@using YourPlace.Infrastructure.Data.Entities;
@model List<Hotel>
@{

    ViewData["Title"] = "Welcome!";
}

<link rel="stylesheet" type="text/css" href="~/css/mainPage.css" />

<div class="logo">
    <svg class="logo-svg">
        <use xlink:href="logo.svg#logo"></use>
    </svg>
</div>
<p>
    
</p>
<!--To Do: add the info from database-->
<div class="row">
    <!-- <a asp-controller="Hotels" asp-action="ViewAll">All Hotels</a>-->
    @if (Model is not null)
    { 
        @foreach (var item in Model)
        {
            <div class="container3">
                <!-- <a asp-controller="Hotels" asp-action="ViewAll">All Hotels:</a>-->

                <img src="~/Images/image.jpg" alt="image" style="width:50%">
                <div class="container-text">
                    <h2>@item.HotelName</h2>
                    <p>@item.Town</p>
                    <p>@item.Rating/10</p><br>
                    <p><button id="openOffers" class="button">Оферти</button></p>
                </div>
            </div>
        }
     }
    else
    {
        <p>No hotels found.</p>
    } 
</div>
