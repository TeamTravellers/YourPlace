@model AllHotelsModel
@{

    ViewData["Title"] = "Welcome!";
}

@* <link rel="stylesheet" type="text/css" href="~/css/mainPage.css" /> *@

<style>
    /* import url('https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;600;700;800&display=swap');
 */
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: 'Mulish', sans-serif;
}

.logo {
    position: fixed;
    top: 22px;
    left: 22px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.logo-svg {
    width: 50px;
    height: 50px;
    position: absolute;
    top: 0;
    left: 0;
}

.logo a {
    font-size: 35px;
    font-weight: bold;
    text-decoration: none;
    color: #222;
    padding-left: 50px;
}

.card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.column {
    float: left;
    width: 60%;
    margin-bottom: 16px;
    padding: 0 8px;
}

/* media screen and (max-width: 650px) {
    .column {
        width: 100%;
        display: block;
    }
} */

.row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 80px;
    flex-direction: row;
}

.card {
    margin-bottom: 20px;
}


.fade-out {
    opacity: 1;
    transition: opacity 0.4s ease;
}

    .fade-out.hide {
        opacity: 0;
    }

    button{
    width: fit-content;
    height: fit-content;
    border: 1px solid #6667b0;
    background: #6b43ff;
    color: #fff;
    line-height: 50px;
    font-size: 18px;
    letter-spacing: 0.025em;
    cursor: pointer;
    font-weight: 800;
    border-radius: 8px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
}

.button:hover {
    text-decoration: underline;
}

.underline {
    content: '';
    position: absolute;
    width: 100%;
    height: 6px;
    top: 65%;
    left: 0;
    background: #73c3f8;
}

.container3 {
    display: flex;
    padding: 40px 32px;
    border-radius: 8px;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    background-color: transparent;
    overflow: auto;
    margin-bottom: 20px;
    margin-left: 10px;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    width: 50%;

}

</style>

<div class="logo">
    <svg class="logo-svg">
        <use xlink:href="logo.svg#logo"></use>
    </svg>
</div>
<p>

</p>

<div class="row">
    @if (Model != null)
    {
        @foreach (var item in Model.Hotels)
        {
            <div class="container3">
                <!-- <a asp-controller="Hotels" asp-action="ViewAll">All Hotels:</a>-->

                <img src="~/Images/MainImages/@item.MainImageURL" alt="image" style="width:90%">
                <div class="container-text">
                    <h2>@item.HotelName</h2>
                    <p>@item.Town, @item.Country</p>
                    <p>@item.Rating/10</p><br>
                    <form asp-controller="Hotels" asp-action="Offer" method="post">
                        <input type="hidden" name="hotelID" value="@item.HotelID" />
                        <button type="submit" class="button">Оферти</button>
                    </form>
                </div>
            </div>  
        }
    }
    else
    {
        <p>No hotels found.</p>
    }
</div>