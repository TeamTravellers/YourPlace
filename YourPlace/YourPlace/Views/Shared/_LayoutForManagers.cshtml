@using YourPlace.Models.ManagerModels;
@model HotelCreateModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourPlace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourPlace.styles.css" asp-append-version="true" />
    <style>
        footer {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px;
        }

        .logoStyle {
            width: 50px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top">

            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo.png" class="logoStyle" />
                    YourPlace
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Поверителност</a>
                        </li>
                        <li class="nav-item">
                            <form id="addNamesForm" asp-area="" asp-controller="ManagerMenu" asp-action="ReturnToStart" method="post">
                                <input type="hidden" name="FirstName" value="@Model.FirstName" />
                                <input type="hidden" name="LastName" value="@Model.LastName" />
                                <a class="nav-link text-dark" href="#" onclick="document.getElementById('addNamesForm').submit();">Начало</a>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form id="addHotelForm" asp-area="" asp-controller="ManagerMenu" asp-action="AddHotel" method="post">
                                <input type="hidden" name="FirstName" value="@Model.FirstName" />
                                <input type="hidden" name="LastName" value="@Model.LastName" />
                                <input type="hidden" name="ManagerID" value="@Model.ManagerID" />
                                <a class="nav-link text-dark" href="#" onclick="document.getElementById('addHotelForm').submit();">Добави хотел</a>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ManagerMenu" asp-action="">Провери хотел</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ManagerMenu" asp-action="">Виж своите хотели</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ManagerMenu" asp-action="">Рецепционисти</a>
                        </li>
                    </ul>
                    @* <partial name="_FiltersPartial" /> *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        &copy; 2023 - YourPlace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
